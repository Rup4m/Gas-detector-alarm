#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);

int gasSensor = A0;
int buzzer = 8;

void setup() {
  lcd.init();
  lcd.backlight();
  pinMode(gasSensor, INPUT);
  pinMode(buzzer, OUTPUT);
}

void loop() {
  int gasValue = analogRead(gasSensor);

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Gas Level:");
  lcd.setCursor(0, 1);
  lcd.print(gasValue);

  if (gasValue > 400) {
    lcd.print(" ALERT!");
    digitalWrite(buzzer, HIGH);  // Buzzer ON
  } else {
    digitalWrite(buzzer, LOW);   // Buzzer OFF
  }

  delay(500);
}
